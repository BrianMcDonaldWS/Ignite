{
  "name": "ignite",
  "version": "0.0.0",
  "description": "Modern markdown documentation generator",
  "main": "dist/ignite.js",
  "bin": {
    "ignite": "./dist/ignite-cli.js"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint": "xo",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "webpack-dev-server --open --env.src=example --env.dst=_ignite --env.index=index.md",
    "build": "webpack --mode production --env.src=example --env.dst=_ignite --env.index=index.md",
    "build:lib": "babel src -d dist",
    "build:lib:watch": "npm run build:lib -- -w"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-env": "^2.4.1",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.11",
    "fs-extra": "^6.0.0",
    "globby": "^8.0.1",
    "highlight.js": "^9.12.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "image-webpack-loader": "^4.2.0",
    "lint-staged": "^7.0.5",
    "loader-utils": "^1.1.0",
    "log-update": "^2.3.0",
    "markdown-loader": "^2.0.2",
    "marked": "^0.3.19",
    "prettier": "^1.12.1",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.2.2",
    "react-router-prop-types": "^1.0.3",
    "root-path": "^0.2.1",
    "serve": "^6.5.6",
    "style-loader": "^0.21.0",
    "transform-markdown-links": "^2.0.0",
    "watch": "^1.0.2",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.2",
    "webpack-dev-server": "^3.1.3",
    "xo": "^0.20.3",
    "yargs": "^11.0.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "xo-react/space"
    ],
    "plugins": [
      "prettier"
    ],
    "env": [
      "browser",
      "node"
    ],
    "rules": {
      "react/jsx-tag-spacing": {
        "closingSlash": "never",
        "beforeSelfClosing": "always",
        "afterOpening": "never"
      }
    }
  }
}
