{
  "name": "ignite",
  "version": "0.0.0",
  "description": "Modern markdown documentation generator",
  "main": "dist/ignite.js",
  "bin": {
    "ignite": "./dist/ignite-cli.js"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint": "xo",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "babel src -d dist",
    "build:watch": "babel src -d dist -w"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "fs-extra": "^6.0.0",
    "globby": "^8.0.1",
    "highlightjs": "^9.10.0",
    "remarkable": "^1.7.1",
    "serve": "^6.5.6",
    "transform-markdown-links": "^2.0.0",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-env": "^2.4.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.5",
    "log-update": "^2.3.0",
    "prettier": "^1.12.1",
    "xo": "^0.20.3",
    "yargs": "^11.0.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "xo": {
    "extends": ["prettier"],
    "plugins": ["prettier"]
  },
  "babel": {
    "presets": [
      "babel-preset-env",
      {
        "modules": "commonjs"
      }
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  }
}
