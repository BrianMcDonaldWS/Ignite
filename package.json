{
  "name": "ignite",
  "version": "0.0.0",
  "description": "Modern markdown documentation generator",
  "main": "dist/ignite.js",
  "bin": {
    "ignite": "./dist/ignite-cli.js"
  },
  "author": {
    "name": "Andrew Lisowski",
    "email": "andrew_lisowski@intuit.com"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "xo",
    "lint:css": "stylelint 'src/**/*.css'",
    "test": "jest",
    "start": "npm run build -- -w",
    "build": "chmod 777 ./dist/ignite-cli.js && ./dist/ignite-cli.js",
    "build:lib": "babel src -d dist --ignore '/__tests__/'",
    "build:lib:watch": "npm run build:lib -- -w",
    "publish:docs": "npm run build -- --publish"
  },
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^8.4.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.5",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "gh-pages": "^1.1.0",
    "globby": "^8.0.1",
    "highlight.js": "^9.12.0",
    "html-webpack-plugin": "^3.2.0",
    "loader-utils": "^1.1.0",
    "markdown-it": "^8.4.1",
    "markdown-it-anchor": "^4.0.0",
    "markdown-it-checkbox": "^1.1.0",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-ins": "^2.0.0",
    "markdown-it-mark": "^2.0.0",
    "markdown-it-regexp": "^0.4.0",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "mini-css-extract-plugin": "^0.4.0",
    "postcss-color-rgba-fallback": "^3.0.0",
    "postcss-initial": "^2.0.0",
    "postcss-loader": "^2.1.5",
    "postcss-nested": "^3.0.0",
    "postcss-pseudoelements": "^5.0.0",
    "postcss-simple-vars": "^4.1.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.2.2",
    "react-router-prop-types": "^1.0.3",
    "root-path": "^0.2.1",
    "scroll-to-element": "^2.0.0",
    "stylelint": "^9.2.0",
    "transform-markdown-links": "^2.0.0",
    "webpack": "^4.6.0",
    "webpack-dev-server": "^3.1.3",
    "webpack-messages": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-css-modules": "^1.1.0",
    "jest-junit": "^3.7.0",
    "lint-staged": "^7.0.5",
    "prettier": "^1.12.1",
    "react-test-renderer": "^16.3.2",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-scss": "^3.1.0",
    "webpack-cli": "^2.1.2",
    "xo": "^0.20.3",
    "yargs": "^11.0.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": [
      "prettier",
      "xo-react/space"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "env": [
      "browser",
      "node",
      "jest"
    ],
    "rules": {
      "react/jsx-tag-spacing": {
        "closingSlash": "never",
        "beforeSelfClosing": "always",
        "afterOpening": "never"
      }
    }
  },
  "ignite": {
    "title": "Ignite",
    "githubURL": "https://github.intuit.com/Fuego/Ignite"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/jest-css-modules",
      "^.+\\.js?$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "/__tests__/utils/"
    ],
    "testResultsProcessor": "jest-junit",
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "cobertura",
      "html",
      "lcov"
    ],
    "moduleNameMapper": {
      "scroll-to-element": "<rootDir>/src/app/components/__tests__/utils/test-stub.js"
    }
  },
  "jest-junit": {
    "output": "./coverage/junit/junit.xml"
  },
  "babel": {
    "presets": [
      "babel-preset-env",
      "react",
      "stage-0"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-decorators",
      "transform-react-constant-elements",
      "transform-react-inline-elements",
      "add-module-exports"
    ]
  }
}
